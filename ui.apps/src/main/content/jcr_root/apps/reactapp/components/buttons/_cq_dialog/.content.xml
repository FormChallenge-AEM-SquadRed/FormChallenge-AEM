<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Buttons"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <layout jcr:primaryType="nt:unstructured"
              margin="{Boolean}false"
              sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
      <items jcr:primaryType="nt:unstructured">
         <column jcr:primaryType="nt:unstructured"
                 sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
               <buttonType cq-msm-lockable="./buttonType"
                           fieldLabel="Escolha um tipo de botão"
                           jcr:primaryType="nt:unstructured"
                           name="./buttonType"
                           sling:resourceType="granite/ui/components/coral/foundation/form/select">
                  <items jcr:primaryType="nt:unstructured">
                     <Next jcr:primaryType="nt:unstructured"
                           selected="true"
                           text="Botão Next"
                           value="Next"/>
                     <More jcr:primaryType="nt:unstructured" text="Botão More" value="More"/>
                     <Finish jcr:primaryType="nt:unstructured"
                             text="Botão Finish"
                             value="Finish"/>
                     <Return jcr:primaryType="nt:unstructured"
                             text="Botão Return"
                             value="Return"/>
                     <Certificates jcr:primaryType="nt:unstructured"
                                   text="Botão Certificates"
                                   value="Certificates"/>
                     <RemoveCertificate jcr:primaryType="nt:unstructured"
                                        text="Botão RemoveCertificates"
                                        value="RemoveCertificate"/>
                  </items>
               </buttonType>
               <text cq-msm-lockable="./text"
                     fieldLabel="Digite um texto aqui por favor."
                     jcr:primaryType="nt:unstructured"
                     name="./text"
                     sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
               <colortext cq-msm-lockable="./colortext"
                          fieldLabel="Cor do texto do botão"
                          jcr:primaryType="nt:unstructured"
                          name="./colortext"
                          sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
               <bgcolor cq-msm-lockable="./bgcolor"
                        fieldLabel="Cor do background do botão"
                        jcr:primaryType="nt:unstructured"
                        name="./bgcolor"
                        sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
            </items>
         </column>
      </items>
   </content>
</jcr:root>
